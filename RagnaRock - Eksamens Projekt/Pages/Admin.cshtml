@page
@using RagnaRock___Eksamens_Projekt.Models
@model AdminModel
@{
    ViewData["Title"] = "Udstillinger";
}



<section class="py-4 my-5">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>RagnaRocks Udstillinger</h1>
            </div>

           


            @foreach (Exhibition item in Model.AllExhibitions)
            {
                <sectionn class="col-md-6 col-lg-4">
                    <article class="card my-3">


                        <article class="card-body">
                                <h3 class="card-title"><a href="#" class="text-secondary">@item.Name</a></h3>

                            <p class="card-text text-black-50">@item.ShortDescription</p>
                            <img src="images/@item.Images" class="card-image-top w-75" alt="thumbnail">
                            <br />
                            <a asp-page="/DetaljeVisning" asp-route-id="@item.Id">Se hele udsilling</a>
                        </article>

                        <a asp-page-handler="Delete"
                           asp-route-id="@item.Id">
                            <span class="material-symbols-outlined text-black">
                                delete
                            </span>
                        </a>

                    </article>
                </sectionn>
            }



        </div>
    </div>
</section>





<section class="p-4 container">
    <h1 class="">Opret ny udstilling </h1>

    <form method="post" class="w-75" enctype="multipart/form-data" asp-page-handler="Save">

        <div class="p-2">
            <label class="mb-0 mr-2" for="Name">Udfyld navn af udstilling</label>
            <input class="form-control ml-2" type="text" id="Name" name="name" required />
        </div>

        <div class="p-2">
            <label class="mb-0 mr-2" for="ShortDescription">Udfyld kort beskrivelse</label>
            <input class="form-control ml-2" type="text" id="ShortDescription" name="shortDescription" required />
        </div>
        <div class="p-2">
            <label class="mb-0 mr-2" for="Description">Udfyld længere beskrivelse</label>
            <input class="form-control ml-2" type="text" id="Description" name="description" required />
        </div>
        <div class="p-2">
            <label class="mb-0 mr-2" for="Images">Indsæt billede</label>
            <input class="form-control ml-2" type="file" id="Images" name="ImageFile" required />

        </div>
        <div class="p-2">
            <label class="mb-0 mr-2" for="SoundFiles">Indsæt lydfil</label>
            <input class="form-control ml-2" type="file" id="SoundFiles" name="soundFiles" />
        </div>


        <div>
            <button class="text-black px-lg-3 mx-lg-2" type="submit" value="Save">Indsend udstilling</button>
        </div>




    </form>
    @if (Model.Message != null)
    {
        <div class="alert alert-info">@Model.Message</div>
    }


</section>

